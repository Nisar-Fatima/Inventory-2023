<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.alabtaal.inventory.controller.ItemController"
            prefHeight="400.0" prefWidth="600.0">
    <Label layoutX="24.0" layoutY="27.0" text="Id" />
    <Label layoutX="13.0" layoutY="62.0" text="Name" />
    <Label layoutX="13.0" layoutY="95.0" text="Brand" />
    <Label layoutX="15.0" layoutY="127.0" text="Price" />
    <Button layoutX="32.0" layoutY="200.0" mnemonicParsing="false" onAction="#onSaveButtonPressed" prefHeight="26.0" prefWidth="42.0" text="Save" />
    <TextField fx:id="idTextField" layoutX="60.0" layoutY="23.0" />
    <TextField fx:id="nameTextField" layoutX="61.0" layoutY="58.0" onKeyTyped="#onNameTextFieldChanges" />
    <TextField fx:id="brandTextField" layoutX="61.0" layoutY="91.0" onKeyTyped="#onBrandTextFieldChanges" />
    <TextField fx:id="priceTextField" layoutX="60.0" layoutY="123.0" onKeyTyped="#onPriceTextFieldChanges" />
    <ChoiceBox fx:id="itemTypeChoiceBox" layoutX="60.0" layoutY="162.0" prefWidth="150.0" />
    <Button layoutX="80.0" layoutY="200.0" mnemonicParsing="false" onAction="#onDeleteButtonPressed" text="Delete" />
    <Button layoutX="136.0" layoutY="200.0" mnemonicParsing="false" onAction="#onFindBrandButtonPressed" text="FindBrand" />
    <Button layoutX="210.0" layoutY="200.0" mnemonicParsing="false" onAction="#onFindNameButtonPressed" text="FindName" />
    <TableView fx:id="itemsTables" layoutX="323.0" prefHeight="260.0" prefWidth="277.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="brandColumn" prefWidth="75.0" text="Brand" />
            <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Price" />
        </columns>
    </TableView>
    <Label layoutX="4.0" layoutY="166.0" text="ItemType" />

</AnchorPane>


